<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{% block title %}Dashboard - Sky Broker System{% endblock %}</title>
    
    {# Favicon #}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    
    {# Tailwind CSS #}
    <script src="https://cdn.tailwindcss.com"></script>
    
    {# Alpine.js #}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    {# Custom Dashboard CSS #}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
    
    {# Custom CSS Variables for Sky Broker Theme #}
    <style>
        :root {
            --primary-50: #eff6ff;
            --primary-100: #dbeafe;
            --primary-500: #3b82f6;
            --primary-600: #2563eb;
            --primary-700: #1d4ed8;
            --border: #e5e7eb;
            --muted: #6b7280;
            --ink: #111827;
        }
        
        .sidebar-shadow {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }
        
        .card-shadow {
            box-shadow: 0 8px 26px rgba(2, 6, 23, 0.05);
        }
        
        .nav-item-active {
            border-color: var(--primary-600);
            color: var(--primary-600);
            box-shadow: 0 0 0 4px var(--primary-50);
        }
        
        .nav-item {
            transition: all 0.15s ease;
        }
        
        .nav-item:hover {
            border-color: var(--primary-600);
            background: #f8fafc;
        }
        
        /* Responsive fixes */
        @media (max-width: 768px) {
            .sidebar {
                width: 280px;
                transform: translateX(-100%);
                position: fixed;
                z-index: 50;
                transition: transform 0.3s ease;
            }
            .sidebar.open {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
        }
        
        /* Icon size fixes */
        svg {
            max-width: 100%;
            height: auto;
        }
        
        .icon-sm {
            width: 1rem;
            height: 1rem;
        }
        
        .icon-md {
            width: 1.25rem;
            height: 1.25rem;
        }
        
        .icon-lg {
            width: 1.5rem;
            height: 1.5rem;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-50 min-h-screen">
    {# Top Navigation Bar #}
    <div class="fixed top-0 left-0 right-0 z-30 bg-white border-b border-gray-200">
        <div class="px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                {# Logo and Brand #}
                <div class="flex items-center">
                    {# Mobile Menu Button #}
                    <button @click="sidebarOpen = !sidebarOpen" class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 mr-3">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                    
                    <div class="flex-shrink-0 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                            </svg>
                        </div>
                        <span class="ml-3 text-xl font-bold text-gray-900">Sky Broker</span>
                    </div>
                </div>

                {# User Menu #}
                <div class="flex items-center space-x-4">
                    {# Notifications #}
                    <button class="p-2 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg relative">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5v1a3 3 0 01-3 3H6a3 3 0 01-3-3v-1l5-7V9a4 4 0 018 0v1l5 7z"/>
                            <path d="M13.73 21a2 2 0 01-3.46 0"/>
                        </svg>
                        <span class="absolute top-1 right-1 block h-2 w-2 rounded-full bg-red-400"></span>
                    </button>

                    {# User Dropdown #}
                    <div class="relative" x-data="{ open: false }">
                        <button @click="open = !open" class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                                <span class="text-sm font-medium text-white">
                                    {% if user.firstName and user.lastName %}
                                        {{ user.firstName[:1]|upper }}{{ user.lastName[:1]|upper }}
                                    {% else %}
                                        {{ user.email[:1]|upper }}
                                    {% endif %}
                                </span>
                            </div>
                            <div class="hidden sm:block">
                                <div class="text-sm font-medium text-gray-900">{{ user.fullName|default('Użytkownik') }}</div>
                                <div class="text-xs text-gray-500">{{ user.email|default('user@example.com') }}</div>
                            </div>
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        
                        {# Dropdown Menu #}
                        <div x-show="open" @click.away="open = false" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <div class="px-4 py-3 border-b border-gray-100">
                                <p class="text-sm font-medium text-gray-900">{{ user.fullName|default('Użytkownik') }}</p>
                                <p class="text-xs text-gray-500">{{ user.email|default('user@example.com') }}</p>
                            </div>
                            
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                <svg class="w-4 h-4 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Profil
                            </a>
                            
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                <svg class="w-4 h-4 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                Ustawienia
                            </a>
                            
                            <hr class="my-1">
                            
                            <a href="/logout" class="block px-4 py-2 text-sm text-red-700 hover:bg-red-50">
                                <svg class="w-4 h-4 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                Wyloguj się
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Main Layout #}
    <div class="flex h-screen pt-16" x-data="{ sidebarOpen: false }">
        {# Mobile Sidebar Overlay #}
        <div x-show="sidebarOpen" @click="sidebarOpen = false" class="fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden" x-transition:enter="transition-opacity ease-linear duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition-opacity ease-linear duration-300" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"></div>
        
        {# Sidebar Navigation #}
        <aside class="w-64 bg-white border-r border-gray-200 sidebar-shadow fixed md:static inset-y-0 left-0 z-50 transform transition-transform duration-300 ease-in-out md:translate-x-0" :class="{ '-translate-x-full': !sidebarOpen }" style="top: 64px;">
            <div class="h-full overflow-y-auto">
                <div class="p-4">
                    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">
                        Nawigacja
                    </div>
                    
                    <nav class="space-y-2">
                        {% block sidebar_navigation %}
                            {# Default navigation - will be overridden in child templates #}
                            <a href="#" class="nav-item flex items-center px-3 py-2 text-sm font-semibold text-gray-700 border border-gray-200 rounded-lg hover:bg-gray-50">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                                </svg>
                                Pulpit
                            </a>
                        {% endblock %}
                    </nav>
                </div>
            </div>
        </aside>

        {# Main Content Area #}
        <main class="flex-1 overflow-y-auto md:ml-0">
            <div class="p-6">
                {# Content Header #}
                <div class="mb-6">
                    {% block content_header %}
                        <h1 class="text-2xl font-bold text-gray-900">
                            {% block page_title %}Dashboard{% endblock %}
                        </h1>
                        {% block page_description %}
                            <p class="mt-1 text-sm text-gray-600">
                                Zarządzaj swoim kontem i przeglądaj aktywność
                            </p>
                        {% endblock %}
                    {% endblock %}
                </div>

                {# Main Content #}
                <div class="space-y-6">
                    {% block content %}
                        {# Default content - will be overridden in child templates #}
                        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
                            <p class="text-gray-600">Witamy w panelu administracyjnym Sky Broker System</p>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </main>
    </div>

    {# Toast Notifications Container #}
    <div id="toast-container" class="fixed top-20 right-4 z-50 space-y-2">
        {# Toasts will be dynamically added here #}
    </div>

    {% block javascripts %}
        <script>
            // Toast notification system
            function showToast(message, type = 'info', duration = 5000) {
                const container = document.getElementById('toast-container');
                const toast = document.createElement('div');
                
                const bgColor = type === 'success' ? 'bg-green-500' : 
                               type === 'error' ? 'bg-red-500' : 
                               type === 'warning' ? 'bg-yellow-500' : 'bg-blue-500';
                
                toast.className = `${bgColor} text-white px-4 py-3 rounded-lg shadow-lg max-w-sm opacity-0 transform translate-x-full transition-all duration-300`;
                toast.innerHTML = `
                    <div class="flex items-center">
                        <div class="flex-1">
                            <p class="text-sm font-medium">${message}</p>
                        </div>
                        <button onclick="this.parentElement.parentElement.remove()" class="ml-3 text-white/80 hover:text-white">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                `;
                
                container.appendChild(toast);
                
                // Animate in
                setTimeout(() => {
                    toast.classList.remove('opacity-0', 'translate-x-full');
                }, 100);
                
                // Auto remove
                setTimeout(() => {
                    toast.classList.add('opacity-0', 'translate-x-full');
                    setTimeout(() => toast.remove(), 300);
                }, duration);
            }
        </script>
    {% endblock %}
</body>
</html>