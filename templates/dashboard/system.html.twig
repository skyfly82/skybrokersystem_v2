{% block content %}
    {% set section = app.request.query.get('section', 'overview') %}
    
    {% if section == 'overview' %}
        {# Statistics Cards #}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
                <div class="flex items-center">
                    <div class="p-2 bg-blue-50 rounded-lg">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Użytkownicy</p>
                        <p class="text-2xl font-bold text-gray-900">42</p>
                    </div>
                </div>
            </div>

            <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
                <div class="flex items-center">
                    <div class="p-2 bg-green-50 rounded-lg">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Klienci</p>
                        <p class="text-2xl font-bold text-gray-900">18</p>
                    </div>
                </div>
            </div>

            <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
                <div class="flex items-center">
                    <div class="p-2 bg-yellow-50 rounded-lg">
                        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Zamówienia (30d)</p>
                        <p class="text-2xl font-bold text-gray-900">256</p>
                    </div>
                </div>
            </div>

            <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
                <div class="flex items-center">
                    <div class="p-2 bg-purple-50 rounded-lg">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Przychód (PLN)</p>
                        <p class="text-2xl font-bold text-gray-900">24,567</p>
                    </div>
                </div>
            </div>
        </div>

        {# Recent Activity #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-900">Ostatnia aktywność</h3>
                <button class="text-blue-600 text-sm font-medium hover:text-blue-700">Zobacz wszystko</button>
            </div>
            
            <div class="space-y-4">
                <div class="flex items-center space-x-4 p-3 rounded-lg hover:bg-gray-50">
                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-gray-900">Nowe zamówienie utworzone</p>
                        <p class="text-xs text-gray-500">Klient: ABC Logistics - Wartość: 189,50 PLN</p>
                    </div>
                    <span class="text-xs text-gray-500">5 min temu</span>
                </div>
                
                <div class="flex items-center space-x-4 p-3 rounded-lg hover:bg-gray-50">
                    <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-gray-900">Aktualizacja statusu przesyłki</p>
                        <p class="text-xs text-gray-500">Przesyłka #ORD-2025-0012 - Status: W transporcie</p>
                    </div>
                    <span class="text-xs text-gray-500">12 min temu</span>
                </div>
                
                <div class="flex items-center space-x-4 p-3 rounded-lg hover:bg-gray-50">
                    <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-gray-900">Płatność otrzymana</p>
                        <p class="text-xs text-gray-500">Faktura #INV-2025-034 - Kwota: 456,78 PLN</p>
                    </div>
                    <span class="text-xs text-gray-500">1 godz. temu</span>
                </div>
            </div>
        </div>

    {% elseif section == 'team' %}
        {# Team Management Section #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-bold text-gray-900">Zarządzanie zespołem</h3>
                <button class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    Dodaj użytkownika
                </button>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-200 bg-gray-50">
                            <th class="text-left py-3 px-4 text-sm font-bold text-gray-900">Imię</th>
                            <th class="text-left py-3 px-4 text-sm font-bold text-gray-900">Email</th>
                            <th class="text-left py-3 px-4 text-sm font-bold text-gray-900">Dział</th>
                            <th class="text-left py-3 px-4 text-sm font-bold text-gray-900">Rola</th>
                            <th class="text-left py-3 px-4 text-sm font-bold text-gray-900">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-3 px-4 text-sm text-gray-900">Anna Kowalska</td>
                            <td class="py-3 px-4 text-sm text-gray-600">anna@sky.test</td>
                            <td class="py-3 px-4 text-sm text-gray-600">support</td>
                            <td class="py-3 px-4">
                                <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">ROLE_USER</span>
                            </td>
                            <td class="py-3 px-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium mr-3">Edytuj</button>
                                <button class="text-red-600 hover:text-red-800 text-sm font-medium">Usuń</button>
                            </td>
                        </tr>
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-3 px-4 text-sm text-gray-900">Jan Nowak</td>
                            <td class="py-3 px-4 text-sm text-gray-600">jan@sky.test</td>
                            <td class="py-3 px-4 text-sm text-gray-600">operations</td>
                            <td class="py-3 px-4">
                                <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">ROLE_ADMIN</span>
                            </td>
                            <td class="py-3 px-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium mr-3">Edytuj</button>
                                <button class="text-red-600 hover:text-red-800 text-sm font-medium">Usuń</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    {% elseif section == 'customers' %}
        {# Customers Management Section #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Zarządzanie klientami</h3>
            <p class="text-gray-600">Widok listy klientów (do podpięcia pod API).</p>
        </div>

    {% elseif section == 'orders' %}
        {# Orders Management Section #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Zarządzanie zamówieniami</h3>
            <p class="text-gray-600">Widok zamówień (do podpięcia pod API).</p>
        </div>

    {% elseif section == 'pricing' %}
        {# Pricing Management Section #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Zarządzanie cennikiem</h3>
            <p class="text-gray-600">System zarządzania cenami i kalkulatorami (do implementacji).</p>
        </div>

    {% elseif section == 'settings' %}
        {# Settings Section #}
        <div class="bg-white border border-gray-200 rounded-xl p-6 card-shadow">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Ustawienia systemu</h3>
            
            <div class="space-y-6">
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 mb-3">Powiadomienia</h4>
                    <button onclick="showToast('Test powiadomienia - to jest przykładowy toast', 'success')" 
                            class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                        Wyślij testowy toast
                    </button>
                </div>
                
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 mb-3">Konfiguracja API</h4>
                    <p class="text-sm text-gray-600">Zarządzaj kluczami API i integracjami z zewnętrznymi serwisami.</p>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}

