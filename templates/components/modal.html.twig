{# Modal Component Template #}
<div x-show="open"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     style="display: none;">

    <!-- Background overlay -->
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div x-show="open"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             @click="open = false"
             class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity"></div>

        <!-- Modal panel -->
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

        <div x-show="open"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             class="inline-block align-bottom bg-white rounded-2xl px-6 pt-5 pb-4 text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-8"
             @click.stop>

            <!-- Modal Header -->
            <div class="sm:flex sm:items-start">
                <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-xl bg-{{ icon_color|default('skywave') }}-100 sm:mx-0 sm:h-14 sm:w-14">
                    {% block modal_icon %}
                    <svg class="h-7 w-7 text-{{ icon_color|default('skywave') }}-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {% endblock %}
                </div>
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                    <h3 class="text-2xl font-bold text-gray-900 font-secondary">
                        {% block modal_title %}Modal Title{% endblock %}
                    </h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-600">
                            {% block modal_description %}Modal description goes here.{% endblock %}
                        </p>
                    </div>
                </div>
                <!-- Close button -->
                <button @click="open = false" class="ml-3 flex-shrink-0 bg-white rounded-full p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-skywave-500 transition-all duration-200">
                    <span class="sr-only">Close</span>
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="mt-6">
                {% block modal_body %}
                <p class="text-gray-700">Modal content goes here.</p>
                {% endblock %}
            </div>

            <!-- Modal Actions -->
            <div class="mt-8 sm:flex sm:flex-row-reverse sm:space-x-reverse sm:space-x-3">
                {% block modal_actions %}
                <button @click="confirmAction(); open = false" class="btn btn-primary w-full sm:w-auto">
                    {% block primary_action_text %}Confirm{% endblock %}
                </button>
                <button @click="open = false" class="btn btn-secondary w-full sm:w-auto mt-3 sm:mt-0">
                    Cancel
                </button>
                {% endblock %}
            </div>
        </div>
    </div>
</div>

{# JavaScript for modal functionality #}
<script>
// Modal management functions
window.modalManager = {
    confirmAction: function() {
        // Override this function for specific modal actions
        console.log('Modal action confirmed');
    },

    showConfirmDialog: function(title, message, confirmCallback) {
        // Dynamic confirmation dialog
        const modal = document.createElement('div');
        modal.innerHTML = `
            <div x-data="{ open: true }" x-show="open" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" class="fixed inset-0 z-50 overflow-y-auto">
                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                    <div x-show="open" @click="open = false; document.body.removeChild(document.body.lastElementChild);" class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity"></div>
                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
                    <div x-show="open" class="inline-block align-bottom bg-white rounded-2xl px-6 pt-5 pb-4 text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-8" @click.stop>
                        <div class="sm:flex sm:items-start">
                            <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-xl bg-warning-100 sm:mx-0 sm:h-14 sm:w-14">
                                <svg class="h-7 w-7 text-warning-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.07 16.5c-.77.833.192 2.5 1.732 2.5z" />
                                </svg>
                            </div>
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                                <h3 class="text-2xl font-bold text-gray-900 font-secondary">${title}</h3>
                                <div class="mt-2">
                                    <p class="text-sm text-gray-600">${message}</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-8 sm:flex sm:flex-row-reverse sm:space-x-reverse sm:space-x-3">
                            <button onclick="${confirmCallback}; open = false; setTimeout(() => document.body.removeChild(document.body.lastElementChild), 200);" class="btn btn-warning w-full sm:w-auto">
                                Confirm
                            </button>
                            <button @click="open = false; setTimeout(() => document.body.removeChild(document.body.lastElementChild), 200);" class="btn btn-secondary w-full sm:w-auto mt-3 sm:mt-0">
                                Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        document.body.appendChild(modal);
    },

    showNotificationModal: function(title, message, type = 'info') {
        // Dynamic notification modal
        const iconColors = {
            success: 'success',
            error: 'error',
            warning: 'warning',
            info: 'skywave'
        };

        const icons = {
            success: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />',
            error: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />',
            warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.07 16.5c-.77.833.192 2.5 1.732 2.5z" />',
            info: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />'
        };

        const modal = document.createElement('div');
        modal.innerHTML = `
            <div x-data="{ open: true }" x-show="open" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" class="fixed inset-0 z-50 overflow-y-auto">
                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                    <div x-show="open" @click="open = false; setTimeout(() => document.body.removeChild(document.body.lastElementChild), 200);" class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity"></div>
                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
                    <div x-show="open" class="inline-block align-bottom bg-white rounded-2xl px-6 pt-5 pb-4 text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-8" @click.stop>
                        <div class="sm:flex sm:items-start">
                            <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-xl bg-${iconColors[type]}-100 sm:mx-0 sm:h-14 sm:w-14">
                                <svg class="h-7 w-7 text-${iconColors[type]}-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    ${icons[type]}
                                </svg>
                            </div>
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                                <h3 class="text-2xl font-bold text-gray-900 font-secondary">${title}</h3>
                                <div class="mt-2">
                                    <p class="text-sm text-gray-600">${message}</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-8">
                            <button @click="open = false; setTimeout(() => document.body.removeChild(document.body.lastElementChild), 200);" class="btn btn-${type === 'error' ? 'error' : 'primary'} w-full">
                                Got it
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        document.body.appendChild(modal);
    }
};
</script>