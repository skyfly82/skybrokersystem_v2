{# Dashboard Card Component #}
{% set cardClasses = cardClasses|default('bg-white overflow-hidden shadow rounded-lg') %}
{% set headerClasses = headerClasses|default('p-5') %}
{% set contentClasses = contentClasses|default('p-5 pt-0') %}

<div class="{{ cardClasses }}">
    {% if title or subtitle or actions %}
    <div class="{{ headerClasses }}">
        <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
                {% if title %}
                    <h3 class="text-lg leading-6 font-medium text-gray-900 truncate">{{ title }}</h3>
                {% endif %}
                {% if subtitle %}
                    <p class="mt-1 max-w-2xl text-sm text-gray-500">{{ subtitle }}</p>
                {% endif %}
            </div>
            {% if actions %}
            <div class="flex-shrink-0">
                {{ actions|raw }}
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}
    
    {% if content %}
    <div class="{{ contentClasses }}">
        {{ content|raw }}
    </div>
    {% endif %}
    
    {% block card_content %}{% endblock %}
</div>