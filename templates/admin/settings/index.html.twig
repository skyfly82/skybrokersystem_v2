{% extends "layouts/admin.html.twig" %}

{% block page_title %}System Settings{% endblock %}
{% block page_heading %}System Settings{% endblock %}
{% block page_description %}
    <p class="mt-1 text-sm text-gray-500">Configure system-wide settings, integrations, and preferences</p>
{% endblock %}

{% block page_actions %}
<div class="flex items-center space-x-3">
    <!-- System Status -->
    <div class="flex items-center space-x-2 px-3 py-2 bg-success-50 rounded-lg border border-success-200">
        <div class="w-2 h-2 bg-success-500 rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-success-700">System Online</span>
    </div>

    <!-- Backup Button -->
    <button onclick="createBackup()" class="btn btn-warning text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Create Backup
    </button>

    <!-- Clear Cache Button -->
    <button onclick="clearCache()" class="btn btn-secondary text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Clear Cache
    </button>

    <!-- Logs Button -->
    <a href="{{ path('admin_settings_logs') }}" class="btn btn-outline text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        View Logs
    </a>
</div>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Settings Navigation Tabs -->
    <div class="bg-white shadow rounded-lg border border-gray-200">
        <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-6" aria-label="Settings navigation" x-data="{ activeTab: 'general' }">
                <button
                    @click="activeTab = 'general'"
                    :class="activeTab === 'general' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    General Settings
                </button>
                <button
                    @click="activeTab = 'couriers'"
                    :class="activeTab === 'couriers' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    Courier Services
                </button>
                <button
                    @click="activeTab = 'api'"
                    :class="activeTab === 'api' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    API Keys
                </button>
                <button
                    @click="activeTab = 'email'"
                    :class="activeTab === 'email' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    Email Settings
                </button>
                <button
                    @click="activeTab = 'notifications'"
                    :class="activeTab === 'notifications' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    Notifications
                </button>
                <button
                    @click="activeTab = 'backup'"
                    :class="activeTab === 'backup' ? 'border-skywave-500 text-skywave-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                    class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200"
                >
                    Backup & Logs
                </button>
            </nav>
        </div>

        <!-- General Settings Tab -->
        <div x-show="activeTab === 'general'" class="p-6">
            <form action="{{ path('admin_settings_general') }}" method="POST" class="space-y-6">
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <div>
                        <label for="site_name" class="block text-sm font-medium text-gray-700">Site Name</label>
                        <input type="text" name="site_name" id="site_name" value="Sky Broker System" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">The name of your courier brokerage system.</p>
                    </div>

                    <div>
                        <label for="admin_email" class="block text-sm font-medium text-gray-700">Administrator Email</label>
                        <input type="email" name="admin_email" id="admin_email" value="admin@skybrokersystem.com" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">Primary email for system notifications.</p>
                    </div>

                    <div>
                        <label for="timezone" class="block text-sm font-medium text-gray-700">Timezone</label>
                        <select name="timezone" id="timezone" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                            <option value="Europe/Warsaw" selected>Europe/Warsaw (UTC+1)</option>
                            <option value="Europe/London">Europe/London (UTC+0)</option>
                            <option value="America/New_York">America/New_York (UTC-5)</option>
                            <option value="Asia/Tokyo">Asia/Tokyo (UTC+9)</option>
                        </select>
                    </div>

                    <div>
                        <label for="default_currency" class="block text-sm font-medium text-gray-700">Default Currency</label>
                        <select name="default_currency" id="default_currency" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                            <option value="PLN" selected>Polish Złoty (PLN)</option>
                            <option value="EUR">Euro (EUR)</option>
                            <option value="USD">US Dollar (USD)</option>
                            <option value="GBP">British Pound (GBP)</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label for="site_description" class="block text-sm font-medium text-gray-700">Site Description</label>
                    <textarea name="site_description" id="site_description" rows="3" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm" placeholder="Describe your courier brokerage service...">Professional courier brokerage platform connecting businesses with reliable shipping solutions across Poland and Europe.</textarea>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="maintenance_mode" name="maintenance_mode" type="checkbox" class="h-4 w-4 text-skywave-600 focus:ring-skywave-500 border-gray-300 rounded">
                        <label for="maintenance_mode" class="ml-2 block text-sm text-gray-900">
                            Enable maintenance mode
                        </label>
                    </div>
                    <div class="text-sm text-gray-500">
                        Prevents non-admin users from accessing the system
                    </div>
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="btn btn-primary">
                        Save General Settings
                    </button>
                </div>
            </form>
        </div>

        <!-- Courier Services Tab -->
        <div x-show="activeTab === 'couriers'" class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-medium text-gray-900">Courier Service Integrations</h3>
                <a href="{{ path('admin_settings_courier_create') }}" class="btn btn-primary btn-sm">
                    <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Add Courier
                </a>
            </div>

            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {% for courier in courier_services %}
                <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-skywave-500">
                    <div class="flex-shrink-0">
                        <div class="h-10 w-10 rounded-lg bg-gradient-to-r from-skywave-400 to-skywave-600 flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between">
                            <p class="text-sm font-medium text-gray-900">{{ courier.name }}</p>
                            <div class="flex items-center space-x-2">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ courier.active ? 'bg-success-100 text-success-800' : 'bg-gray-100 text-gray-800' }}">
                                    {{ courier.active ? 'Active' : 'Inactive' }}
                                </span>
                                <button onclick="toggleCourier({{ courier.id }})" class="text-gray-400 hover:text-gray-600">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <p class="text-sm text-gray-500">{{ courier.code|upper }}</p>
                        <div class="mt-2 flex items-center space-x-2">
                            {% if courier.domestic %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-skywave-100 text-skywave-800">Domestic</span>
                            {% endif %}
                            {% if courier.international %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-warning-100 text-warning-800">International</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="absolute inset-0">
                        <a href="{{ path('admin_settings_courier_edit', {id: courier.id}) }}" class="absolute inset-0"></a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- API Keys Tab -->
        <div x-show="activeTab === 'api'" class="p-6">
            <form action="{{ path('admin_settings_api_keys') }}" method="POST" class="space-y-6">
                <div class="bg-warning-50 border border-warning-200 rounded-md p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-warning-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.07 16.5c-.77.833.192 2.5 1.732 2.5z" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-warning-800">Security Notice</h3>
                            <p class="mt-2 text-sm text-warning-700">
                                API keys are sensitive information. Never share them publicly or commit them to version control.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <div>
                        <label for="inpost_api_key" class="block text-sm font-medium text-gray-700">InPost API Key</label>
                        <input type="password" name="inpost_api_key" id="inpost_api_key" value="****abcd1234" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">API key for InPost courier integration.</p>
                    </div>

                    <div>
                        <label for="dhl_api_key" class="block text-sm font-medium text-gray-700">DHL API Key</label>
                        <input type="password" name="dhl_api_key" id="dhl_api_key" value="****efgh5678" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">API key for DHL courier integration.</p>
                    </div>

                    <div>
                        <label for="paynow_api_key" class="block text-sm font-medium text-gray-700">PayNow API Key</label>
                        <input type="password" name="paynow_api_key" id="paynow_api_key" value="****ijkl9012" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">API key for PayNow payment integration.</p>
                    </div>

                    <div>
                        <label for="stripe_public_key" class="block text-sm font-medium text-gray-700">Stripe Public Key</label>
                        <input type="text" name="stripe_public_key" id="stripe_public_key" value="pk_test_****3456" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">Stripe publishable key (safe to expose).</p>
                    </div>

                    <div class="lg:col-span-2">
                        <label for="stripe_secret_key" class="block text-sm font-medium text-gray-700">Stripe Secret Key</label>
                        <input type="password" name="stripe_secret_key" id="stripe_secret_key" value="****mnop7890" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">Stripe secret key (keep confidential).</p>
                    </div>
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="btn btn-primary">
                        Update API Keys
                    </button>
                </div>
            </form>
        </div>

        <!-- Email Settings Tab -->
        <div x-show="activeTab === 'email'" class="p-6">
            <form action="{{ path('admin_settings_email') }}" method="POST" class="space-y-6">
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <div>
                        <label for="smtp_host" class="block text-sm font-medium text-gray-700">SMTP Host</label>
                        <input type="text" name="smtp_host" id="smtp_host" value="smtp.gmail.com" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>

                    <div>
                        <label for="smtp_port" class="block text-sm font-medium text-gray-700">SMTP Port</label>
                        <input type="number" name="smtp_port" id="smtp_port" value="587" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>

                    <div>
                        <label for="smtp_username" class="block text-sm font-medium text-gray-700">SMTP Username</label>
                        <input type="email" name="smtp_username" id="smtp_username" value="noreply@skybrokersystem.com" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>

                    <div>
                        <label for="smtp_password" class="block text-sm font-medium text-gray-700">SMTP Password</label>
                        <input type="password" name="smtp_password" id="smtp_password" value="************" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>

                    <div>
                        <label for="smtp_encryption" class="block text-sm font-medium text-gray-700">Encryption</label>
                        <select name="smtp_encryption" id="smtp_encryption" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                            <option value="tls" selected>TLS</option>
                            <option value="ssl">SSL</option>
                            <option value="">None</option>
                        </select>
                    </div>

                    <div>
                        <label for="from_email" class="block text-sm font-medium text-gray-700">From Email</label>
                        <input type="email" name="from_email" id="from_email" value="noreply@skybrokersystem.com" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>

                    <div class="lg:col-span-2">
                        <label for="from_name" class="block text-sm font-medium text-gray-700">From Name</label>
                        <input type="text" name="from_name" id="from_name" value="Sky Broker System" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-skywave-500 focus:border-skywave-500 sm:text-sm">
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <button type="button" onclick="testEmailSettings()" class="btn btn-secondary">
                        Send Test Email
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Save Email Settings
                    </button>
                </div>
            </form>
        </div>

        <!-- Notifications Tab -->
        <div x-show="activeTab === 'notifications'" class="p-6">
            <form action="{{ path('admin_settings_notifications') }}" method="POST" class="space-y-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">Email Notifications</h4>
                            <p class="text-sm text-gray-500">Send notifications via email</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="email_notifications" checked class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-skywave-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-skywave-600"></div>
                        </label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">SMS Notifications</h4>
                            <p class="text-sm text-gray-500">Send notifications via SMS</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="sms_notifications" class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-skywave-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-skywave-600"></div>
                        </label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">Push Notifications</h4>
                            <p class="text-sm text-gray-500">Send browser push notifications</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="push_notifications" checked class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-skywave-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-skywave-600"></div>
                        </label>
                    </div>
                </div>

                <hr class="border-gray-200">

                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-gray-900">Notification Types</h3>

                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">Order Notifications</h4>
                            <p class="text-sm text-gray-500">New orders, status updates</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="order_notifications" checked class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-skywave-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-skywave-600"></div>
                        </label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">Shipment Notifications</h4>
                            <p class="text-sm text-gray-500">Delivery updates, tracking changes</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="shipment_notifications" checked class="sr-only peer">
