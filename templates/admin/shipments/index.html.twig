<script>
function shipmentsManager() {
    return {
        searchQuery: '{{ filters.search }}',
        shipments: [],
        selectedShipments: [],
        filters: {
            status: '{{ filters.status }}',
            courier: '{{ filters.courier }}',
            dateFrom: '{{ filters.date_from }}',
            dateTo: '{{ filters.date_to }}'
        },
        sortField: '',
        sortDirection: 'asc',
        loading: false,

        init() {
            // Initialize with server-side data
            this.shipments = @json($shipments->toArray() ?? []);
            this.startRealTimeUpdates();
        },

        searchShipments() {
            this.applyFilters();
        },

        applyFilters() {
            this.loading = true;
            const params = new URLSearchParams({
                search: this.searchQuery,
                status: this.filters.status,
                courier: this.filters.courier,
                date_from: this.filters.dateFrom,
                date_to: this.filters.dateTo
            });

            // Update URL without reload
            const newUrl = `{{ path('admin_shipments') }}?${params.toString()}`;
            window.history.pushState({}, '', newUrl);

            // In a real app, you'd make an AJAX call here
            setTimeout(() => {
                this.loading = false;
                this.showToast('Filters applied', 'success');
            }, 500);
        },

        resetFilters() {
            this.searchQuery = '';
            this.filters = { status: '', courier: '', dateFrom: '', dateTo: '' };
            this.selectedShipments = [];
            window.location.href = '{{ path("admin_shipments") }}';
        },

        toggleSelectAll() {
            if (this.selectedShipments.length === this.shipments.length) {
                this.selectedShipments = [];
            } else {
                this.selectedShipments = this.shipments.map(s => s.id);
            }
        },

        clearSelection() {
            this.selectedShipments = [];
        },

        async bulkAction(action) {
            if (this.selectedShipments.length === 0) {
                this.showToast('Please select shipments first', 'warning');
                return;
            }

            if (!confirm(`Are you sure you want to ${action.replace('_', ' ')} ${this.selectedShipments.length} shipment(s)?`)) {
                return;
            }

            try {
                const response = await fetch('{{ path("admin_shipments_bulk_action") }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        action: action,
                        shipment_ids: this.selectedShipments
                    })
                });

                const result = await response.json();

                if (result.success) {
                    this.showToast(result.message, 'success');
                    this.selectedShipments = [];
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    this.showToast(result.error || 'Operation failed', 'error');
                }
            } catch (error) {
                this.showToast('Network error occurred', 'error');
                console.error('Bulk action error:', error);
            }
        },

        async updateShipmentStatus(shipmentId, status) {
            try {
                const response = await fetch(`/admin/shipments/${shipmentId}/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ status: status })
                });

                const result = await response.json();

                if (result.success) {
                    this.showToast(result.message, 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    this.showToast(result.error || 'Failed to update status', 'error');
                }
            } catch (error) {
                this.showToast('Network error occurred', 'error');
                console.error('Status update error:', error);
            }
        },

        async trackShipment(trackingNumber) {
            try {
                this.showToast('Fetching latest tracking information...', 'info');

                // In a real app, this would call the tracking API
                const response = await fetch(`/admin/shipments/track/${trackingNumber}`, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    this.showToast('Tracking information updated', 'success');
                    // You could open a modal here to show tracking details
                    this.openTrackingModal(result.tracking);
                } else {
                    this.showToast('Failed to fetch tracking information', 'error');
                }
            } catch (error) {
                this.showToast('Error tracking shipment', 'error');
                console.error('Tracking error:', error);
            }
        },

        openTrackingModal(trackingData) {
            // Implementation for tracking modal
            alert(`Tracking data for ${trackingData.tracking_number}:\n\nStatus: ${trackingData.status}\nLast Update: ${trackingData.last_update}`);
        },

        startRealTimeUpdates() {
            // Simulate real-time updates every 30 seconds
            setInterval(() => {
                this.refreshShipmentStatuses();
            }, 30000);
        },

        async refreshShipmentStatuses() {
            try {
                const response = await fetch('{{ path("admin_shipments_api") }}', {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Update shipments with new data
                    this.shipments = result.shipments;
                    console.log('📦 Shipment statuses refreshed');
                }
            } catch (error) {
                console.error('Failed to refresh statuses:', error);
            }
        },

        showToast(message, type = 'info') {
            // Create toast notification
            const toast = document.createElement('div');
            toast.className = `fixed top-4 right-4 z-50 max-w-sm bg-white shadow-lg rounded-lg border-l-4 border-${type === 'success' ? 'success' : type === 'error' ? 'error' : type === 'warning' ? 'warning' : 'skywave'}-500 p-4 transform transition-all duration-300 translate-x-full`;

            toast.innerHTML = `
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        ${this.getToastIcon(type)}
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">${message}</p>
                    </div>
                    <div class="ml-auto pl-3">
                        <button onclick="this.parentElement.parentElement.parentElement.remove()" class="text-gray-400 hover:text-gray-600">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>
            `;

            document.body.appendChild(toast);

            // Slide in
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
            }, 100);

            // Auto remove after 5 seconds
            setTimeout(() => {
                toast.classList.add('translate-x-full');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        },

        getToastIcon(type) {
            const icons = {
                success: '<svg class="w-5 h-5 text-success-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
                error: '<svg class="w-5 h-5 text-error-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
                warning: '<svg class="w-5 h-5 text-warning-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.07 16.5c-.77.833.192 2.5 1.732 2.5z" /></svg>',
                info: '<svg class="w-5 h-5 text-skywave-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
            };
            return icons[type] || icons.info;
        }
    }
}

