{% extends 'base.html.twig' %}

{% block title %}Shipment Created Successfully{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .success-animation {
            animation: successPulse 2s infinite;
        }
        @keyframes successPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50">
    <div class="container mx-auto px-4 py-8">
        <!-- Success Header -->
        <div class="text-center mb-8 fade-in-up">
            <div class="success-animation inline-block mb-4">
                <div class="w-24 h-24 bg-green-500 rounded-full flex items-center justify-center mx-auto">
                    <i class="fas fa-check text-white text-4xl"></i>
                </div>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Shipment Created Successfully!</h1>
            <p class="text-xl text-gray-600">Your shipment is ready for pickup</p>
        </div>

        <!-- Shipment Details Card -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden fade-in-up" style="animation-delay: 0.2s;">
                <!-- Header -->
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-2xl font-semibold">Shipment Details</h2>
                            <p class="text-blue-100">Track your package with the details below</p>
                        </div>
                        <div class="text-right">
                            <div class="text-sm text-blue-100">Tracking Number</div>
                            <div class="text-2xl font-bold">{{ shipment.tracking_number }}</div>
                        </div>
                    </div>
                </div>

                <!-- Content -->
                <div class="p-6">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                        <!-- Left Column -->
                        <div class="space-y-6">
                            <!-- Shipment Info -->
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <i class="fas fa-box mr-2 text-blue-600"></i>Shipment Information
                                </h3>
                                <div class="space-y-3">
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Shipment ID:</span>
                                        <span class="font-medium">#{{ shipment.id }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Status:</span>
                                        <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
                                            {{ shipment.status|title }}
                                        </span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Courier Service:</span>
                                        <span class="font-medium">{{ shipment.courier_service|title }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Created:</span>
                                        <span class="font-medium">{{ shipment.created_at|date('d/m/Y H:i') }}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Addresses -->
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <i class="fas fa-map-marker-alt mr-2 text-blue-600"></i>Delivery Route
                                </h3>
                                <div class="space-y-4">
                                    <div class="flex items-start space-x-3">
                                        <div class="w-3 h-3 bg-blue-500 rounded-full mt-2"></div>
                                        <div>
                                            <div class="font-medium text-gray-900">From: {{ shipment.sender.name }}</div>
                                            <div class="text-sm text-gray-600">{{ shipment.sender.address }}</div>
                                        </div>
                                    </div>
                                    <div class="ml-1.5 h-8 w-0.5 bg-gray-300"></div>
                                    <div class="flex items-start space-x-3">
                                        <div class="w-3 h-3 bg-green-500 rounded-full mt-2"></div>
                                        <div>
                                            <div class="font-medium text-gray-900">To: {{ shipment.recipient.name }}</div>
                                            <div class="text-sm text-gray-600">{{ shipment.recipient.address }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="space-y-6">
                            <!-- Cost Breakdown -->
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <i class="fas fa-receipt mr-2 text-blue-600"></i>Cost Breakdown
                                </h3>
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <div class="space-y-2">
                                        <div class="flex justify-between">
                                            <span class="text-gray-600">Shipping Cost:</span>
                                            <span>{{ shipment.total_cost }} {{ shipment.currency }}</span>
                                        </div>
                                        <hr class="my-2">
                                        <div class="flex justify-between font-semibold text-lg">
                                            <span>Total Paid:</span>
                                            <span class="text-green-600">{{ shipment.total_cost }} {{ shipment.currency }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Next Steps -->
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                    <i class="fas fa-list-check mr-2 text-blue-600"></i>Next Steps
                                </h3>
                                <div class="space-y-3">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                        <span class="text-sm text-gray-700">Print and attach the shipping label</span>
                                    </div>
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                        <span class="text-sm text-gray-700">Package your items securely</span>
                                    </div>
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                        <span class="text-sm text-gray-700">Drop off at courier location or schedule pickup</span>
                                    </div>
                                    <div class="flex items-center space-x-3">
                                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                        <span class="text-sm text-gray-700">Track your shipment online</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 flex flex-wrap justify-center gap-4 fade-in-up" style="animation-delay: 0.4s;">
                <a href="#"
                   class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-print mr-2"></i>Download Label
                </a>

                <a href="{{ path('customer_shipments') }}"
                   class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors">
                    <i class="fas fa-search mr-2"></i>Track Shipment
                </a>

                <a href="{{ path('customer_shipment_wizard_start') }}"
                   class="inline-flex items-center px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>Create Another Shipment
                </a>

                <a href="{{ path('customer_dashboard') }}"
                   class="inline-flex items-center px-6 py-3 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors">
                    <i class="fas fa-home mr-2"></i>Back to Dashboard
                </a>
            </div>

            <!-- Additional Info -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6 fade-in-up" style="animation-delay: 0.6s;">
                <!-- Tracking Info -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                        <i class="fas fa-satellite-dish mr-2 text-blue-600"></i>Tracking Information
                    </h3>
                    <div class="text-sm text-gray-700 space-y-2">
                        <p>You can track your shipment using:</p>
                        <ul class="list-disc list-inside space-y-1 ml-4">
                            <li>Tracking number: <strong>{{ shipment.tracking_number }}</strong></li>
                            <li>SMS notifications (if enabled)</li>
                            <li>Email updates</li>
                            <li>Our mobile app</li>
                        </ul>
                    </div>
                </div>

                <!-- Support -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                        <i class="fas fa-headset mr-2 text-blue-600"></i>Need Help?
                    </h3>
                    <div class="text-sm text-gray-700 space-y-2">
                        <p>Our support team is here to help:</p>
                        <div class="space-y-1">
                            <div><i class="fas fa-phone mr-2 text-blue-600"></i>+48 123 456 789</div>
                            <div><i class="fas fa-envelope mr-2 text-blue-600"></i>support@skybroker.com</div>
                            <div><i class="fas fa-clock mr-2 text-blue-600"></i>Mon-Fri 8:00-18:00</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- QR Code for Mobile Tracking -->
            <div class="mt-8 text-center fade-in-up" style="animation-delay: 0.8s;">
                <div class="bg-white rounded-lg shadow-md p-6 inline-block">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">Quick Mobile Tracking</h3>
                    <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-3 flex items-center justify-center">
                        <i class="fas fa-qrcode text-4xl text-gray-400"></i>
                    </div>
                    <p class="text-sm text-gray-600">Scan with your phone to track</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-redirect after 30 seconds if user is inactive
setTimeout(() => {
    if (confirm('Would you like to return to the dashboard?')) {
        window.location.href = '{{ path("customer_dashboard") }}';
    }
}, 30000);

// Print functionality
document.querySelector('a[href="#"]').addEventListener('click', function(e) {
    e.preventDefault();
    // Here you would implement the label download/print functionality
    alert('Label download functionality would be implemented here');
});
</script>
{% endblock %}